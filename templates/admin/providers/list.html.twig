{% extends "admin/base.html.twig" %}

{% block title %}{{provider.name}} - Certifications{% endblock %}

{% block scriptsheet %}
    <script>
        document.getElementById("admin_providers").classList.add("link-active");
    </script>
{% endblock %}

{% block form %}
    <div class = "form_container">
        <h1>Les certifications de {{provider.name}} :</h1>
        <div class="buttons_container">
            <a href="{{ path("providers_new")}}"><button class="btn add_button">Add</button></a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for certification in provider.getCertifications() %}
                <tr>
                    <td>{{ certification.id }}</td>
                    <td>{{ certification.title }}</td>
                    <td>{{ certification.description|length > 10 ? certification.description|slice(0, 10) ~ '...' :  certification.description}}</td>
                    <td>
                        <a href="{{ path('certif_view', {'id': certification.id}) }}">show</a>
                        {# <a href="{{ path('exams_list', {'id': certification.id}) }}">list exams</a> #}
                        <a href="{{ path('certif_edit', {'id': certification.id}) }}">edit</a>
                        <form method="post" action="{{ path('certif_delete', {'id': certification.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class = "btn-delete">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ certification.id) }}">
        <button class="btn-link">delete</button>
    </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}